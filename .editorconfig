# http://editorconfig.org

root = true

[*] # 表示所有文件适用
charset = utf-8 # 设置文件字符集为utf-8
indent_style = space # 缩进风格（tab|space）
indent_size = 4 # 缩进大小
quote_type = single # 使用单引号
max_line_length = 150 # 最大行宽
end_of_line = lf # 控制换行类型(lf|cr|crlf)
trim_trailing_whitespace = true # 去除行首的任意空白字符
insert_final_newline = true # 始终在文件末尾插入一个新行

[{auto-imports.d.ts,components.d.ts,package.json,package-lock.json,tsconfig.json,tsconfig.node.json,node_modules/**.*}]
indent_style = space
indent_size = 2

[*.md] # 表示仅 md 文件适用以下规则
max_line_length = off
trim_trailing_whitespace = false
